<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySuccess"
    android:background="@color/main_color">


    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_gravity="center"
        app:progressBackgroundStrokeWidth="45dp"
        app:progressBackgroundColor="@color/white"
        app:progressCap="butt"
        app:progressColor="@color/main_color"
        app:drawDot="false"
        app:progressStrokeWidth="25dp"
        app:textColor="@color/white"
        app:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:background="@color/main_color"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:text="4 workouts\nleft"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:textStyle="bold"
        android:text="+16.5 PLN"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="50sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Congratulations! 235.5 PLN left."
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="20sp"/>

</FrameLayout>